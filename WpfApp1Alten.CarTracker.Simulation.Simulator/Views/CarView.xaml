<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1Alten.CarTracker.Simulation.Simulator.Views"
             x:Class="WpfApp1Alten.CarTracker.Simulation.Simulator.Views.CarView"
            xmlns:vml = "clr-namespace:WpfApp1Alten.CarTracker.Simulation.Simulator.VML" 
            vml:ViewModelLocator.AutoHookedUpViewModel="True"          
            mc:Ignorable="d" Height="87.606" Width="331">
    <Grid OpacityMask="Black" Background="White" Margin="0,0,-32,-17">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" >
            <StackPanel HorizontalAlignment="Left" Width="363">
                <ItemsControl ItemsSource="{Binding Path=Cars}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:CarDetailsView Car="{Binding .}"></local:CarDetailsView>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>